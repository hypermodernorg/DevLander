@model BL.Puzzle

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row top-padding">

    <div class="col">
        <div class="container-xxl">

            <div class="row">
                <div class="col text-center">
                    <h1 class="text-uppercase">Puzzle Generator Advanced</h1>
                    <hr class="bg-color3 mx-auto w-25 border border-color3 border-3" />
                </div>
            </div>


            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6 bg-color2 p-5">

                    <form asp-action="Create2b">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <h4>Enter Word or Phrase</h4>
                            <input asp-for="Phrase" class="form-control" />
                            <span asp-validation-for="Phrase" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
                <div class="col-md-3"></div>

            </div>
        </div>
    </div>
</div>




